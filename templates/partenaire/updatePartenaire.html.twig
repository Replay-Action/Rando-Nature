{% extends 'base.html.twig' %}
{# La page Modification de Partneaire #}
{% block body %}
    <div class="container-fluid row page__container">

        {# Le Titre #}
        <div class="title__partenaire container-fluid row">
            <h1 class="title col-12">Modification Partenaire</h1>
            <div class="center-hr col-12">
                <hr class="hr25-pourcent">
            </div>
        </div>
    </div>
    <div class="container-fluid box1">
        {# Le formulaire #}
            <div class="main__partenaire">
                <div class="form__partenaire">

                {{ form_start(form) }}

                <label>Nom du partenaire : </label>
                {{ form_widget(form.nom) }}
                <label>Logo du Partenaire : </label>
                {{ form_widget(form.logo) }}
                <label>Url du site partenaire : </label>
                {{ form_widget(form.url) }}

                    <div class="div-button-partenaire">
                        {{ form_widget(form.Valider) }}
                        <a href="{{ path('partenaire') }}" class="btn partenaire-button-retour">Retour</a>
                    </div>
                    {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}