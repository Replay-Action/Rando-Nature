{{ form_start(form) }}
{# {{ form_widget(form) }}

<div class="col-auto d-flex justify-content-center">

</div>

{# le formulaire du user #}
<div class="row margin-form-adherent">
    <div class="col">
        <table class="table table-borderless d-flex justify-content-center text-white">
            <tbody>
            <tr>
                <th scope="col">Role :</th>
                <td>{{ form_widget(form.roles) }}</td>
            </tr>
            <tr>
                <th scope="col">Référent :</th>
                <td>{{ form_widget(form.referents) }}</td>
            </tr>

            <tr>
                <th scope="col">Prénom :</th>
                <td>{{ form_widget(form.prenom) }}</td>
            </tr>
            <tr>
                <th scope="col">Nom :</th>
                <td>{{ form_widget(form.nom) }}</td>
            </tr>
            <tr>
                <th scope="col">Pseudo :</th>
                <td>{{ form_widget(form.username) }}</td>
            </tr>
            <tr>
                <th scope="col">Mail :</th>
                <td>{{ form_widget(form.email) }}</td>
            </tr>
            <tr>
                <th scope="col">Téléphone :</th>
                <td>{{ form_widget(form.telephone) }}</td>
            </tr>

            <tr>
                <th scope="col">Mot de passe :</th>
                <td>{{ form_widget(form.password) }}</td>
            </tr>
            <tr>
                <th scope="col">Date de naissance :</th>
                <td>{{ form_widget(form.date_naissance) }}</td>
            </tr>
            <tr>
                <th scope="col">Photo du profil :</th>
                <td>{{ form_widget(form.photos) }}</td>
            </tr>
            </tbody>

        </table>
    </div>
    <div class="m-3 row d-flex justify-content-center">
        <div class="col-lg-12">
            <p class="justify-content-center d-flex">{{ form_widget(form.enregistrer) }}</p>
        </div>
        <div class="col-lg-12 justify-content-center d-flex">
            <a href="{{ path('user_index') }}" class="btn color-button-retour">Retour</a>
        </div>
    </div>
    {{ form_end(form) }}
</div>



