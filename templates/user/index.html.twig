{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}
    <div class="container-fluid">
        <img src="{{ asset ('/content/user ban pages user.jpg') }}" class="img-fluid" width="100%">
    </div>
<div class="col-auto">
    <div class="m-5 justify-content-center text-center " >
          <div class="">
            <h1 class="bg-warning m-3 p-3">Liste des adhérents</h1>
          </div>
        <div class="bg-light border m-5"><p class="font-weight-bold pt-2">NOTA BENE</p>
         <div >
          <p class="text-center small">Pour effacer un adhérent, allez sur le bouton 'modifier et cliquez sur le bouton 'effacer'</p>
         </div>
       <div>
        <p class="text-center small">Pour modifier le profil d'un adhérent (pour le changer en administrateur ou en adhérent simple par exemple) vous avez besoin de son accord et de son mot de passe</p>
           <p class="small">par contre vous pouvez effacer sa photo si elle ne convient aux valeurs du site</p>
       </div>
        </div>
    </div>

    <table class="table table-sm bg-light border m-1">
        <thead>
            <tr>

                <th>Pseudo</th>
                <th>Roles</th>
              {# <th>Password</th>  #}
                <th>Nom</th>
                <th>Prenom</th>
                <th>Telephone</th>
                <th>Email</th>
                <th>Date_naissance</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>

                <td>{{ user.username }}</td>
               <td> {% if (user.roles|json_encode) =='["ROLE_USER"]'%}
                Adhérent
                {%  elseif (user.roles|json_encode) =='["ROLE_ADMIN","ROLE_USER"]'%} Administrateur
                    {% else %}
                    {% endif %}

                   </td>
               {#  <td>{{ user.password }}</td>#}
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.telephone }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.dateNaissance ? user.dateNaissance|date('d-m-Y') : '' }}</td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}" class="btn btn-outline-primary">detail</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-outline-primary">modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">il n'y a rien d'enregistré</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
    <div class="row mt-3 mb-5 d-flex justify-content-center">
        <div class="col-5">
            <a href="{{ path('user_new') }}" class="btn btn-primary btn-lg btn-block">Créer un adhérent</a>
        </div>
    </div>

{% endblock %}
