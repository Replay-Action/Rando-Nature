{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Réinitialiser mon mot de passe{% endblock %}
{# page de reinitialisation de mdp #}

{% block body %}


    {# banniere et titre #}
    <div class="container-fluid">
        <img src="{{ asset ('/content/user ban pages user.jpg') }}" class="img-fluid" width="100%">
    </div>
    <div class="container-fluid">
        <div class="row justify-content-center mt-5">
             <h1 class="text-center"> Mot de passe oublié ?</h1>
        </div>

{# formulaire pour changer le mot de passe #}
    <form method="post">
        <div class="row justify-content-center mt-5">
            <label for="mail"><h4>Adresse mail  &ensp;</h4></label>
            <input   type="email" id="mail" name="mail"/>
        </div>
        <div class="row justify-content-center m-1">
            <p class="lead">
                Saisissez votre adresse mail et nous vous enverrons vers un lien pour réinitialiser votre mot de passe.
            </p>
        </div>
        <div class="row justify-content-center m-5">
        <button type="submit" class="btn btn-primary">Envoyer un lien de réinitialisation</button>
        </div>
    </form>

    </div>
{% endblock %}