{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Accueil{% endblock %}

{% block body %}

    {# La page d'accueil #}


    {# le style original de bootstrap
et celui de la vignette clignotante #}
    <style>
        .example-wrapper {
            text-align: center;
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }

        #test {
            animation: Test 2s infinite;
        }

        @keyframes Test {
            0% {
                opacity: 1;
            }
            50% {
                opacity: 0;
            }
            100% {
                opacity: 1;
            }
        }

    </style>

    {# le carrousel #}
    <div class="container-fluid">
        <div id="demo" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active" width=100%">
                    <img class="d-block w-300" src="{{ asset('/content/riviere-resize.jpg') }}" alt="Carrousel slide 1"
                         width=" 100%">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-300" src="{{ asset('/content/velo-cargo-resize.jpg') }}"
                         alt="Carrousel slide 2" width=" 100%">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-300" src="{{ asset('/content/peniche bois resize.jpg') }}"
                         alt="Carrousel slide 3" width=" 100%">
                </div>
            </div>
        </div>
    </div>

    {# la vignette clignotante #}
    {% if (actidispo) %}
        <div class="justify-content-center">
            <div class="row lg-col-4 sm-col-12 m-3">
                <a href="{{ path('activite_index') }}" id="test"
                   class=" text-align-center bg-warning btn-lg btn-outline-danger"> {{ actidispo| length }} activités
                    ouvertes aux inscriptions</a>
            </div>
        </div>
    {% else %}
    {% endif %}

    {# le texte sous le carrousel #}
    <div class="example-wrapper ">
        <div>
            <H1>Bienvenue sur</H1>
            <h1 class="font-weight-bold"> Vélo Rando Nature Bruz</h1>
            <hr>
            <div class="jumbotron jumbotron ">
                <div class="container-fluid">
                    <h2 class="display-6"> Vous aimez les balades à vélo et la nature et avez besoin de vous évader
                        ?</h2>
                </div>
            </div>
            <p class="lead"> L'association « Vélo Rando Nature Bruz » vous propose des balades le long des canaux, des
                voies vertes et des chemins.
            </p>
            <hr>
        </div>
        <h2> Venez nous rejoindre !</h2>
    </div>




{# les 4 cards de choix, leurs liens, leurs photo, et leurs effets #}
