{% extends 'base.html.twig' %}

{% block title %}Trombinoscope | {{ parent() }}{% endblock %}

{# ATTENTION cette twig correspond à la page du trombinoscope #}

{% block body %}

    {% if is_granted("ROLE_USER") %}{
    {# stylisation en css des photos du trombi #}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }

        .hovereffect {
            width: 100%;
            height: 100%;
            float: left;
            overflow: hidden;
            position: relative;
            text-align: center;
            cursor: default;
        }

        .hovereffect .overlay {
            width: 100%;
            height: 100%;
            position: absolute;
            overflow: hidden;
            top: 0;
            left: -10px;
            -webkit-transition: all 0.4s ease-in-out;
            transition: all 0.4s ease-in-out;
        }

        .hovereffect:hover .overlay {
            background-color: rgba(170, 170, 170, 0.4);
        }

        .hovereffect h2, .hovereffect img {
            -webkit-transition: all 0.4s ease-in-out;
            transition: all 0.4s ease-in-out;
        }

        .hovereffect img {
            display: block;
            position: relative;
            -webkit-transform: scale(1.1);
            -ms-transform: scale(1.1);
            transform: scale(1.1);
        }

        .hovereffect:hover img {
            -webkit-transform: scale(1);
            -ms-transform: scale(1);
            transform: scale(1);
        }

        .hovereffect h2 {
            text-transform: uppercase;
            color: #fff;
            text-align: center;
            position: relative;
            font-size: 17px;
            padding: 0px;
            background: rgba(0, 0, 0, 0.6);
        }

        .hovereffect a.info {
            display: inline-block;
            text-decoration: none;
            padding: 7px 14px;
            text-transform: uppercase;
            color: #fff;
            border: 1px solid #fff;
            margin: 50px 0 0 0;
            background-color: transparent;
            opacity: 0;
            filter: alpha(opacity=0);
            -webkit-transform: scale(1.5);
            -ms-transform: scale(1.5);
            transform: scale(1.5);
            -webkit-transition: all 0.4s ease-in-out;
            transition: all 0.4s ease-in-out;
            font-weight: bold;
            height: 100%;
            width: 100%;
            position: absolute;
            top: -20%;
            left: 8%;
            padding: 70px;
        }

        .hovereffect:hover a.info {
            opacity: 1;
            filter: alpha(opacity=100);
            -webkit-transform: scale(1);
            -ms-transform: scale(1);
            transform: scale(1);
            background-color: rgba(0, 0, 0, 0.4);
        }
    </style>


    {# titre #}
    <div class="example-wrapper text-center">
        <h1>Le trombinoscope des adhérents</h1>
    </div>


    <div class="container">
        <div class="row mb-3" align="center">

            {# on boule sur les utilisateurs #}
            {% for user in users %}
                <div class="col-lg-3 col-md-4 col-sm-5 col-6 mt-5 ">
                    <div class="card hovereffect" style=" border: solid 1px lightgrey;"
                         style="width:300px ;height: 15em; object-fit:cover">

                        {# si le user a une photo #}
                        {% if (user.photos is not empty) %}

                            {# on boucle sur les photos et on les affiche, avec son pseudo, son nom et prenom #}
                            {% for photo in user.photos %}
                                <img class="card-img-top img-fluid display: block "
                                     src="{{ asset ('/photo-profil/'~ photo.name) }}" alt="Card image cap " style="width: auto;
                                         height: 15em;
                                             object-fit: cover;border: solid 1px lightgrey;">
                                <div class="overlay">
                                    <h2>{{ user.username }}</h2>
                                    <a class="info small"
                                       href="{{ path('user_show',{ 'id': user.id}) }}">{{ user.prenom }} {{ user.nom }}</a>
                                </div>
                            {% endfor %}

                            {# s'il n'a pas de photos, on lui met un logo avec son pseudo, son nom et prenom #}
                        {% else %}
                            <img class="card-img-top img-fluid display:block  "
                                 src="{{ asset('/logos/logo velo bleu.png') }}" alt="Card image cap" style=" width:300px;
    height:15em;  object-fit:cover;border: solid 1px lightgrey;">
                            <div class="overlay">
                                <h2>{{ user.username }}</h2>
                                <a class="info small"
                                   href="{{ path('user_show',{ 'id': user.id}) }}">{{ user.prenom }} {{ user.nom }}</a>
                            </div>
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
        }
    {% else %}
        <div class="row text-center">
        <h2 class="text-danger">Vous  n'avez pas les droits pour accéder à cette page</h2>
        </div>
    {% endif %}
{% endblock %}
