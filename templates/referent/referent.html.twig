{% extends 'base.html.twig' %}

{% block title %}Liste des Référents | {{ parent() }}{% endblock %}
{# la page de la liste des référents #}

{% block body %}
    {% if is_granted("ROLE_ADMIN") %}

    <div class="container-fluid row global-referent">
        <div>
        <h1>Liste des Référents</h1>
        </div>
    </div>
<div class="container color_box" >
    {% for referent in referents %}
        <div class="color_referent col-lg-4">
            <div class="col-lg-12 liste-referent">
                <div class="col-lg-1">
                    <p class=" mb-5 mt-2 ">
                        {{ referent.nom }}
                    </p>
                </div>
                <a href="{{ path('updateRef', {'id':referent.id}) }}">Modifier</a>
                <a href="{{ path('deleteRef', {'id':referent.id}) }}">Supprimer</a>
            </div>
        </div>
    {% endfor %}
</div>
    {% endif %}
{% endblock %}